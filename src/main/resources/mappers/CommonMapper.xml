<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xd.hufei.mapper.other.CommonMapper">
    <sql id="selectColumns">
        id, originalValue
    </sql>
    <insert id="insertNewData" parameterType="java.util.List">
        INSERT INTO your_table_name (column1, column2, column3)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.field1}, #{item.field2}, #{item.field3})
        </foreach>
    </insert>

    <update id="createTable">
            CREATE TABLE ${tableName} (
                  id INT PRIMARY KEY AUTO_INCREMENT,
        <foreach collection="parameters.entrySet()" item="entry" separator=",">
            ${entry.key} ${entry.value}
        </foreach>
            )
     </update>


    <select id="getData2desensitization" resultType="com.xd.hufei.dto.other.DesensitizedData">
        SELECT
        <include refid="selectColumns"/>
        FROM ${tableName}
    </select>
</mapper>
