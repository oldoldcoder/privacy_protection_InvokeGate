<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xd.hufei.mapper.other.CommonMapper">
    <sql id="selectColumns">
        id, originalValue
    </sql>
    <insert id="insertNewData" parameterType="java.util.List">
        INSERT INTO ${tableName} (CS1, CS2, CS3)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.cs1}, #{item.cs2}, #{item.cs3})
        </foreach>
    </insert>

    <update id="createTable">
            CREATE TABLE ${tableName} (
                  id INT PRIMARY KEY AUTO_INCREMENT,
                  CS1 varchar(255),
                  CS2 varchar(255),
                  CS3 varchar(255)
            )
     </update>


    <select id="getData2desensitization" resultType="com.xd.hufei.dto.other.DesensitizedData">
        SELECT
        <include refid="selectColumns"/>
        FROM ${tableName}
    </select>
</mapper>
